<Window x:Class="WpfApp_bing.StartupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WPF Binding机制对比演示" Height="344" Width="392"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 标题 -->
        <TextBlock Grid.Row="0" 
                   Text="WPF Binding机制对比演示"
                   FontSize="18" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <!-- 选择按钮 -->
        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="查看传统WPF版本" 
                    Click="ShowTraditionalWpf_Click"
                    Width="200" Height="40" 
                    Margin="0,0,0,10"
                    FontSize="14"/>

            <Button Content="查看Prism框架版本" 
                    Click="ShowPrismVersion_Click"
                    Width="200" Height="40" 
                    Margin="0,0,0,10"
                    FontSize="14"/>

            <Button Content="同时查看两个版本（对比）" 
                    Click="ShowBothVersions_Click"
                    Width="200" Height="40" 
                    Margin="0,0,0,10"
                    FontSize="14"
                    Background="LightBlue"/>

            <Button Content="退出" 
                    Click="Exit_Click"
                    Width="200" Height="40" 
                    Margin="0,20,0,0"
                    FontSize="14"/>
        </StackPanel>

        <!-- 说明文字 -->
        <TextBlock Grid.Row="2" 
                   TextWrapping="Wrap"
                   HorizontalAlignment="Center"
                   Margin="0,20,0,0">
            <Run Text="选择不同版本查看WPF Binding机制的实现方式"/>
            <LineBreak/>
            <Run Text="建议选择同时查看进行详细对比"/>
        </TextBlock>
    </Grid>
</Window>